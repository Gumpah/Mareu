<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.MeetingFragment"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageview_meeting"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginVertical="12dp"
        android:src="@drawable/circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/TextView_firstline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/imageview_meeting"
        app:layout_constraintStart_toEndOf="@id/imageview_meeting"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TextView_secondline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/TextView_firstline"
        app:layout_constraintStart_toEndOf="@id/imageview_meeting" />

    <ImageButton
        android:id="@+id/imagebutton_deletebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/imageview_meeting"
        app:layout_constraintTop_toTopOf="@+id/imageview_meeting"
        app:srcCompat="@drawable/ic_baseline_delete_24"
        android:contentDescription="TODO" />



</androidx.constraintlayout.widget.ConstraintLayout>